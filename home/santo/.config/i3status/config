# }

memory {
        format = "used mem: %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "free disk: %free"
}

read_file uptime {
	format = "uptime %content"
        path = "/proc/uptime"
}